<%-include("partials/header")%>
	
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%=blog.title%></div >
	<form class="ui form"action="/index/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="newBlog[title]" value="<%=blog.title%>">
		</div>
		<div class="field">
			<label>Image Url</label>
			<input type="text" name="newBlog[image]" value="<%=blog.image%>">
		</div>
		<div class="field">
			<label>Body Content</label>
			<textarea name="newBlog[body]"><%=blog.body%></textarea>
		</div>
		<button class="ui big teal basic button">Submit</button>
		
	</form>
</div>
	
<%-include("partials/footer")%>


